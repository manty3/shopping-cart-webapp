
   <section>
    <div class="container mt-5">
   <div class="row">
        {{#each products}}
      <div class="col-md-3 p-3 ">
<div class="card" style="width: 16rem; height: 23rem;">
<img class="card-img-top"  src="/product-images/{{this._id}}.jpg" style="height: 13rem;">
  <div class="card-body">
    <h5 class="card-title">{{this.Name}}</h5>
      <h4>{{this.Price}}</h4>
    <h6 class="card-subtitle mb-2 text-muted">{{this.description}}</h6>
    
 <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
  
  </div>
</div> 
    </div>
      {{/each}}
      </div>
    </div>
    </div>
    </section>
    