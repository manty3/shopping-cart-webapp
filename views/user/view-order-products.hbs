<section>
  <div class="container mt-5">
    <div class="row">
 {{#if products}}
      {{#each products}}
      <div class="col-md-3 p-3">
        <div class="card" style="width: 15rem; height: 24rem;">
          <img class="card-img-top" src="/product-images/{{this.product._id}}.jpg" alt="" style="height: 12rem;" >
          <div class="card-body">
            <h5 class="card-title">{{this.product.Name}}</h5>
            <p class="card-text">RS: {{this.product.Price}}</p>
            <p class="card-text">Quantity: {{this.quantity}}</p>
            <p class="card-text">{{this.description}}</p>
          </div>
        </div>
      </div>
      {{/each}}
       {{else}}
        <p>No products found for this order.</p>
      {{/if}}
    </div>
  </div>
</section>