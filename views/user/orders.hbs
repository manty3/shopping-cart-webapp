<section>
  <div class="container">
   <table class="table mt-5" id="orderItems">
    <thead>
      
      <tr>
        <th scope="col">date</th>
        <th>Address</th>
        <th>Pincode</th>
        <th>Mobile</th>
        <th scope="col">Amount</th>
        <th scope="col">payment</th>
        <th>status</th>
        <th>view</th>
       
      </tr>
    </thead>
  <tbody>
    {{#each orders}}
    <tr>
      <td>{{this.date}}</td>
      <td>{{this.deliveryDetails.address}}</td>
       <td>{{this.deliveryDetails.pincode}}</td>
        <td>{{this.deliveryDetails.mobile}}</td>
        <td>{{this.totalAmount}}</td>
        <td>{{this.paymentMethod}}</td>
        <td>{{this.status}}</td>
<td>
  <a href="/view-order-products/{{this._id}}" class="btn btn-warning">view products</a>
</td>
    </tr>
    {{/each}}
  </tbody>
   </table>
</section>
<script>
  $(document).ready(function() {
    $('#orderItems').DataTable();
  });
</script>
